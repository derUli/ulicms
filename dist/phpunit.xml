<?xml version="1.0"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    bootstrap="lib/phpunit_init.php"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
    backupGlobals="true"
    backupStaticAttributes="false"
    cacheResult="false"
    colors="false"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    forceCoversAnnotation="false"
    processIsolation="false"
    stopOnError="true"
    stopOnFailure="true"
    stopOnIncomplete="true"
    stopOnSkipped="false"
    stopOnRisky="true"
    timeoutForSmallTests="1"
    timeoutForMediumTests="10"
    timeoutForLargeTests="60"
    verbose="true">
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./</directory>
        </include>
        <exclude>
            <directory>vendor/</directory>
            <directory>installer.aus/</directory>
            <directory>installer</directory>
            <file>test.php</file>
            <directory>content/configurations</directory>
            <directory>content/modules/core_comments/lang</directory>
            <directory>content/modules/core_home/lang</directory>
            <directory>content/modules/core_forms/lang</directory>
            <directory>content/modules/core_settings/lang</directory>
            <directory>content/modules/core_help/lang</directory>
            <directory>tests/</directory>
            <directory>admin/fm/</directory>
            <directory>admin/inc</directory>
            <directory>content/modules/core_comments/templates</directory>
            <directory>content/modules/core_content/templates</directory>
            <directory>content/modules/core_content/lang</directory>
            <directory>content/modules/core_info/lang</directory>
            <directory>lang</directory>
            <directory>content/modules/core_package_manager/lang</directory>
            <directory>content/modules/core_package_manager/templates</directory>
            <directory>content/modules/core_info/templates</directory>
            <directory>content/modules/core_settings/templates</directory>
            <directory>content/modules/core_system_update/templates</directory>
            <directory>content/modules/core_users/templates</directory>
            <directory>content/modules/core_users/lang</directory>
            <directory>content/modules/update_manager</directory>
            <directory>content/modules/update_manager_dashboard</directory>
            <directory>content/modules/extend_upgrade_helper</directory>
            <directory>content/modules/core_package_manager/templates</directory>
            <directory>content/modules/fortune2</directory>
            <directory>content/modules/oneclick_upgrade</directory>
            <directory>content/modules/slicknav/</directory>
            <directory>content/modules/core_home/templates</directory>
            <directory>content/modules/core_history/templates</directory>
            <directory>content/modules/core_media/templates</directory>
            <directory>content/templates/impro17</directory>
            <directory>content/templates/2020</directory>
            <directory>content/modules/core_forms/templates</directory>
            <directory>content/modules/core_help/templates</directory>
            <directory>default</directory>
            <file>index.php</file>
            <file>lib/CMSConfigSample.php</file>
            <file>CMSConfig.php</file>
            <file>admin/index.php</file>
            <file>lib/phpunit_init</file>
            <file>update.php</file>
            <file>admin.php</file>
            <file>admin/inc/getlinksforeditor.php</file>
            <file>admin/inc/header.php</file>
            <file>lib/cron.php</file>
        </exclude>
        <report>
            <html outputDirectory="./report"/>
        </report>
    </coverage>
    <php>
        <env name="ULICMS_ENVIRONMENT" value="test" force="true"/>
    </php>
    <logging>
        <!-- <log type="testdox-html" target="./log/testdox.html" /> -->
    </logging>
    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>tests/</directory>
            <exclude>./vendor/</exclude>
        </testsuite>
    </testsuites>
</phpunit>
